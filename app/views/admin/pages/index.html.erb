<h1>Admin</h1>

<div class="d-flex flex-row flex-wrap">
  <div class="mr-3">
    <h6>Actions</h6>
    <div class="form-group">
      <%= link_to 'Synchronize', sync_admin_pages_path, class: 'btn btn-primary btn-sm', method: :put %>
    </div>
  </div>
  <div class="mr-3">
    <h6>Flags</h6>
    <div class="d-flex flex-row flex-wrap mb-3">
      <ul class="list-unstyled mr-3 mb-0">
        <li><span class="badge badge-success">published</span> &ndash; page is published with latest revision</li>
        <li><span class="badge badge-info">preview</span> &ndash; page has a preview</li>
        <li><span class="badge badge-secondary">unpublished</span> &ndash; page is not published</li>
      </ul>
      <ul class="list-unstyled mr-3 mb-0">
        <li><span class="badge badge-danger">published</span> &ndash; page is published with non-latest revision</li>
        <li><span class="badge badge-danger">preview</span> &ndash; page has no preview (parser failure)</li>
      </ul>
    </div>
  </div>
</div>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Category</th>
      <th>Flags + Revisions</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr id="<%= dom_id page %>">
        <td><%= link_to page.id, admin_page_path(page) %></td>
        <td class="w-50">
          <%= link_to page.title, admin_page_path(page), class: 'text-dark' %>
        </td>
        <td>
          <% if page.project.present? %>
            <span class="badge text-dark"><%= page.project.category %></span>
          <% end %>
        </td>
        <td>
          <% if page.publishable? %>
            <% if page.published? %>
              <% if page.synced? %>
                <span class="badge badge-success">published</span>
              <% else %>
                <span class="badge badge-danger">published</span>
              <% end %>
            <% else %>
              <span class="badge badge-secondary">unpublished</span>
            <% end %>
            <% if page.preview? && (page.published? && page.published_revision.preview?) || (!page.published? && page.latest_revision.preview?) %>
              <span class="badge badge-info">preview</span>
            <% else %>
              <span class="badge badge-danger">preview</span>
            <% end %>
          <% end %>
          <span class="badge text-dark"><%= page.revisions.size %></span>
        </td>
        <td><%= l page.updated_at, format: '%F %T' %></td>
        <td>
          <% if page.publishable? %>
            <% if page.published? %>
              <%= link_to 'Unpublish', unpublish_admin_page_path(page), class: 'btn btn-secondary btn-sm', method: :patch %>
              <%= link_to 'Preview', preview_admin_page_path(page, version: page.published_revision.version), class: 'btn btn-link btn-sm' if page.preview? && page.published_revision.preview? %>
            <% else %>
              <%= link_to 'Publish', publish_admin_page_path(page, version: 'latest'), class: 'btn btn-primary btn-sm', method: :patch %>
              <%= link_to 'Preview', preview_admin_page_path(page, version: 'latest'), class: 'btn btn-link btn-sm' if page.preview? && page.latest_revision.preview? %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages, views_prefix: 'admin' %>
