<% content_for(:title) do %><%= @project_revision.title %> &middot; Red Flags &middot; Slovensko.Digital<% end %>
<div id="project-show" class="container main">

  <div class="row mb-5">
    <div class="col-md-12">
      <h1 class="project-title"><%= @project_revision.title %></h1><%= link_to 'Hodnotenie na RF webe', project_show_revision_type_path(@project_revision.project_id, @project_revision.revision.page.page_type)%>
        <% @project_revision.tags.select { |tag| ProjectsHelper::ALLOWED_TAGS[tag] }.each do |tag| %>
          <p class="lead">
            <%= link_to projects_path(tag: tag) do%>
            <span class="badge badge-danger"><%= ProjectsHelper::ALLOWED_TAGS[tag] %></span>
            <% end %>
          </p>
        <% end %>
      <p class="lead text-muted mt-4"><%= @project_revision.description %></p>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-6">
      <h5>Náklady na projekt</h5>
      <p><%= @project_revision.budget %></p>
    </div>

    <div class="col-md-6">
      <h5>Garant <%= help_icon_if_blank(@project_revision.guarantor) %></h5>
      <p><%= @project_revision.guarantor %></p>
    </div>
  </div>

  <% if @project_revision.summary.present? %>
    <div class="row mb-3">
      <div class="col">
        <h5>Zhrnutie hodnotenia Red Flags</h5>
        <p class="mb-4"><%= @project_revision.summary %></p>
      </div>
    </div>
  <% end %>

  <% if @project_revision.recommendation.present? %>
    <div class="card mb-4 text-white <%= @project_revision.revision.redflags_count.zero? ? 'bg-secondary' : 'bg-danger' %>">
      <div class="card-body">
        <h5 class="card-title">Stanovisko Slovensko.Digital</h5>
        <p class="card-text"><%= @project_revision.recommendation %></p>
      </div>
    </div>
  <% end %>

  <div class="row mb-4 mt-5 pt-4">
    <div class="col">
      <h5>Hodnotenie zverejnené dňa</h5>
      <p><%= l(@project_revision.updated_at.to_date, format: :human) %></p>
      <% if @project_revision.outdated? %>
        <div class="alert alert-warning my-2" role="alert">
          <h5 class="alert-heading">Hodnotenie nie je aktuálne</h5>
          <p class="mb-0">
            V tomto projekte nastali zmeny, ktoré nie sú zahrnuté v súčasnom hodnotení. Na aktualizácii pracujeme, môžete sa do nej
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <h5>Aktuálny stav projektu</h5>
      <p><%= @project_revision.stage %></p>
    </div>
    <div class="col">
      <h5>Čo sa práve deje</h5>
      <p><%= @project_revision.current_status&.html_safe %></p>
    </div>
  </div>

  <div class="mt-5">
    <div class="row">
      <div class="col">
        <h2 id="hodnotenie" class="mb-0">Hodnotenie<% if @project_revision.revision.redflags_count > 0 %> <strong class="text-danger"><%= @project_revision.revision.redflags_count %> &times; <%= fa_icon('flag', class: 'text-danger') %></strong><% end %></h2>
      </div>
    </div>
    <hr class="mt-0 mb-2">
    <div class="row mt-5">
      <% @project_revision.revision.ratings.index_by(&:rating_type).each do |rating_type, rating| %>
        <div class="col-md-3">
          <%= rating_stars(rating) %>
          <p><%= rating_type.name %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="my-5">
    <h2 class="mb-5">Detailné hodnotenie projektu</h2>
    <div id="detailed-rating">
      <%== formatted_body_html(@project_revision.body_html) %>
    </div>
  </div>
</div>
